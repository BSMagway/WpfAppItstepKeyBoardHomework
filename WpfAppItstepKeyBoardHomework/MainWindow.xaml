<Window x:Class="WpfAppItstepKeyBoardHomework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppItstepKeyBoardHomework"
        mc:Ignorable="d"
        Title="Keyboard Training" 
        Height="600" 
        Width="1000" 
        KeyDown="KeyClick" 
        KeyUp="KeyClick" >

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8" />
        </Style>

        <Style x:Key="TextBlockWithWord">
            <Setter Property="TextBlock.FontSize" Value="18"/>
            <Setter Property="TextBlock.HorizontalAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="TextBlockWithLetter">
            <Setter Property="TextBlock.FontSize" Value="25"/>
            <Setter Property="TextBlock.HorizontalAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

